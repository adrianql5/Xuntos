NODE_ENV=development

# Socket.io
SOCKET_PORT=3001

# Frontend URL (para CORS)
FRONTEND_URL=http://localhost:3000

# Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads
